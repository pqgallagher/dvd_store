<div class="card">
  <div class="card-block">
    <h5 class="card-title"><%= link_to movie.title, movie_path(movie) %></h5>
  </div>
  <%= image_tag movie.picture, class: 'card-img-top img-fluid d-block img-index img-thumbnail' %>
  <div class="card-block">
    <p class="card-text">$<%= movie.price %></p>
    <% if @movies_in_cart.include?(movie) %>
      <%= link_to 'Remove From Cart', remove_from_cart_movie_path(movie),method: :post, class: 'card-link' %>
    <% else %>
      <%= link_to 'Add to Cart', add_to_cart_movie_path(movie),method: :post, class: 'card-link' %>
    <% end %>
  </div>
</div>
