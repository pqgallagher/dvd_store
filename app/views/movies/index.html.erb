<% if @movies_in_cart.any?  %>
  <h3>Cart</h3>
  <%= link_to 'Remove All', remove_all_movies_path, method: :post %>
  <div class="card-group">
    <%= render partial: 'cart', collection: @movies_in_cart %>
  </div>
<% end %>

<h2>All Movies</h2>

<%= form_tag sort_movie_path(@categories) do |c|%>
   <%= select_tag :sort_id, options_from_collection_for_select(@categories, :id, :name) %>
   <%= submit_tag "Sort" %>
<% end %>
<%= button_to 'Show All', show_all_movies_path, method: :post %>


<div class="card-deck-wrapper">
  <div class="card-deck">
    <%= render partial: 'movie', collection: @movies %>
  </div>
</div>
