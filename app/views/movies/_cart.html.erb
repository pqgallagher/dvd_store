<div class="card">
  <div class="card-block">
    <h4 class="card-title"><%= link_to cart.title, movie_path(cart) %></h4>
  </div>
  <div class="card-block">
    <% if @movies_in_cart.include?(cart) %>
      <%= link_to 'Remove From Cart', remove_from_cart_movie_path(cart),method: :post, class: 'card-link' %>
    <% else %>
      <%= link_to 'Add to Cart', add_to_cart_movie_path(cart),method: :post, class: 'card-link' %>
    <% end %>
  </div>
</div>
